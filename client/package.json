{
  "name": "inside-out-monitor-client",
  "version": "1.0.0",
  "description": "Client for sending encrypted heartbeats to monitor server",
  "main": "client.js",
  "type": "module",
  "bin": {
    "monitor-client": "./client-cli.js",
    "ping-monitor": "./ping-monitor-cli.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "bundle": "esbuild client-cli.js --bundle --platform=node --target=node18 --format=cjs --banner:js=\"const import_meta={url:require('url').pathToFileURL(__filename).href};\" --define:import.meta=import_meta --outfile=../dist/client-bundle.cjs && esbuild ping-monitor-cli.js --bundle --platform=node --target=node18 --format=cjs --banner:js=\"const import_meta={url:require('url').pathToFileURL(__filename).href};\" --define:import.meta=import_meta --outfile=../dist/ping-bundle.cjs",
    "build": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output ../dist/monitor-client",
    "build:win": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-win-x64 --output ../dist/monitor-client-win.exe",
    "build:linux": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-linux-x64 --output ../dist/monitor-client-linux",
    "build:macos": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-macos-x64 --output ../dist/monitor-client-macos",
    "build:ping": "npm run bundle && pkg ../dist/ping-bundle.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output ../dist/ping-monitor",
    "build:ping:win": "npm run bundle && pkg ../dist/ping-bundle.cjs --targets node18-win-x64 --output ../dist/ping-monitor-win.exe",
    "build:ping:linux": "npm run bundle && pkg ../dist/ping-bundle.cjs --targets node18-linux-x64 --output ../dist/ping-monitor-linux",
    "build:ping:macos": "npm run bundle && pkg ../dist/ping-bundle.cjs --targets node18-macos-x64 --output ../dist/ping-monitor-macos"
  },
  "pkg": {
    "outputPath": "../dist"
  },
  "keywords": [
    "monitoring",
    "udp",
    "libsodium"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1"
  }
}
