{
  "name": "inside-out-monitor-client",
  "version": "1.0.0",
  "description": "Client for sending encrypted heartbeats to monitor server",
  "main": "client.js",
  "type": "module",
  "bin": {
    "heartbeat-client": "./client-cli.js",
    "heartbeat-ping": "./ping-monitor-cli.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unifi": "node test-unifi.js",
    "test:unifi:sites": "node test-unifi-sites.js",
    "bundle": "node ../scripts/build-with-config.js",
    "cleanup": "node -e \"const fs=require('fs'); ['../dist/client-bundle.cjs','../dist/ping-bundle.cjs','../dist/unifi-bundle.cjs','../dist/monitoring-bundle.cjs'].forEach(f=>{try{fs.unlinkSync(f)}catch(e){}})\"",
    "build": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output ../dist/heartbeat-client && npm run build:ping && npm run build:unifi && npm run build:monitoring && npm run cleanup",
    "build:win": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-win-x64 --output ../dist/heartbeat-client-win.exe && npm run build:ping:win && npm run build:unifi:win && npm run build:monitoring:win && npm run cleanup",
    "build:linux": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-linux-x64 --output ../dist/heartbeat-client-linux && npm run build:ping:linux && npm run cleanup",
    "build:macos": "npm run bundle && pkg ../dist/client-bundle.cjs --targets node18-macos-x64 --output ../dist/heartbeat-client-macos && npm run build:ping:macos && npm run cleanup",
    "build:ping": "pkg ../dist/ping-bundle.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output ../dist/heartbeat-ping",
    "build:ping:win": "pkg ../dist/ping-bundle.cjs --targets node18-win-x64 --output ../dist/heartbeat-ping-win.exe",
    "build:ping:linux": "pkg ../dist/ping-bundle.cjs --targets node18-linux-x64 --output ../dist/heartbeat-ping-linux",
    "build:ping:macos": "pkg ../dist/ping-bundle.cjs --targets node18-macos-x64 --output ../dist/heartbeat-ping-macos",
    "build:unifi": "pkg ../dist/unifi-bundle.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output ../dist/unifi-monitor",
    "build:unifi:win": "pkg ../dist/unifi-bundle.cjs --targets node18-win-x64 --output ../dist/unifi-monitor-win.exe",
    "build:unifi:linux": "pkg ../dist/unifi-bundle.cjs --targets node18-linux-x64 --output ../dist/unifi-monitor-linux",
    "build:unifi:macos": "pkg ../dist/unifi-bundle.cjs --targets node18-macos-x64 --output ../dist/unifi-monitor-macos",
    "build:monitoring": "pkg ../dist/monitoring-bundle.cjs --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output ../dist/web-file-monitor",
    "build:monitoring:win": "pkg ../dist/monitoring-bundle.cjs --targets node18-win-x64 --output ../dist/web-file-monitor-win.exe",
    "build:monitoring:linux": "pkg ../dist/monitoring-bundle.cjs --targets node18-linux-x64 --output ../dist/web-file-monitor-linux",
    "build:monitoring:macos": "pkg ../dist/monitoring-bundle.cjs --targets node18-macos-x64 --output ../dist/web-file-monitor-macos"
  },
  "pkg": {
    "outputPath": "../dist"
  },
  "keywords": [
    "monitoring",
    "udp",
    "libsodium"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1"
  }
}
